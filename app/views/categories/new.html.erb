<h1 class="text-center mt-4"> Create a new category </h1>

<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row mt-4">
            
                    <%= f.label :name, "Category name",  class:"col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.text_field :name, class:"form-control shadow rounded", placeholder: "Enter a name."  %> 
                    </div>
                </div>
            
                <div class="form-group row justify-content-center mt-5">
                    <%= f.submit class:"btn btn-outline-light btn-lg col-2" %>
                </div>
                    
            <%end %>
        
            <p> <%= link_to '[ Return to articles listing ]', articles_path, class:"text-info text-center" %> </p>
        </div>
    </div>
</div>